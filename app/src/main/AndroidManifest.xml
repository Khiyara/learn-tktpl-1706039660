<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="id.ac.ui.cs.mobileprogramming.rizkhiph.mvc">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:targetApi="n">
        <activity
            android:name=".activity.implementation.MainActivity"
            android:label="@string/title_activity_welcome"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.implementation.SearchActivity"
            android:label="SearchActivity" >
        </activity>
        <activity
            android:name=".activity.implementation.TimerActivity"
            android:label="TimerActivity" >
        </activity>
    </application>

</manifest>